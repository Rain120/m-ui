{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "es/",
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./components",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "components/**/*"
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "webpack",
    "jest",
    ".docz",
    "dist",
    "lib",
    "es",
    "test"
  ]
}